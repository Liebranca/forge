package anvil;

  use v5.36.0;
  use strict;
  use warnings;

  use English qw(-no_match_words);

  use lib $ENV{ARPATH}.'/lib/sys/';

  use Style;
  use Chk;
  use Tree;

  use lib $ENV{ARPATH}.'/forge/';

  use anvil::l0;
  use anvil::l1;
  use anvil::l2;

# ---   *   ---   *   ---
# info

  our $VERSION = v0.00.3;#b
  our $AUTHOR  = 'IBN-3DILA';

# ---   *   ---   *   ---
# cstruc

sub new($class,%O) {

  my $l1        = $NULLSTR;

  my $l2_frame  = Tree->new_frame();
  my $l2        = $l2_frame->new(undef,'$');


  my $self=bless {

    l0 => $NULLSTR,
    l1 => $NULLSTR,
    l2 => $l2,

    anchor => undef,
    nest   => [],

    status => 0x00,

  },$class;

  return $self;

};

# ---   *   ---   *   ---
# procs a codestr from file or raw

sub read($self,$src) {

  my $codestr = (is_filepath($src))
    ? orc($src)
    : $src
    ;


  anvil::l0::read($self,$codestr);

  $self->{l2}->prich();

};

# ---   *   ---   *   ---
# test

my $ice=anvil->new();
$ice->read(q[

cpy ar,qword thin [br+$10];

]);

